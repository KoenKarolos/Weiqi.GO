<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.goplayapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoPlayApp">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".local.play_local"
            android:label="Play Locally!">
        </activity>
        <activity
            android:name=".online.play_online"
            android:label="Play Online!">
        </activity>
        <activity
            android:name=".rules.rules"
            android:parentActivityName=".MainActivity"
            android:label="Show Rules">
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>